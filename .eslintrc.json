{
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": ["airbnb-base"],
    "rules": {
      "no-shadow": "off",
      "no-param-reassign": "off",
      "eol-last": "off",
      "no-plusplus": "off",
      "no-const-assign": "off",
      "no-use-before-define": ["error", {"variables": false, "functions": false, "classes": false}]
    },
    "ignorePatterns": [
      "dist/",
      "build/"
    ]
}